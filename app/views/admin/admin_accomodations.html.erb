<div class="admin-pannel page-wrapper">
  <div class="admin-page-container">
    <div class="admin-page-navigation">
      <%= render 'layouts/partials/admin_navbar' %>
    </div>
    <div class="admin-page-main">
      <h1 class="admin-title">Gérer les hébergements</h1>
      <% @hebergements.each do |hebergement| %>
      <div class="admin-card">
        <h3 class="admin-element-title"><%= hebergement.title %> </h3>
        <%= link_to 'Modifier', edit_hebergement_path(hebergement), :class => "card-button admin-button" %>
        <%= link_to 'Delete', hebergement_path(hebergement), method: :delete, data: {confirm: 'Es tu sûr(e) de vouloir effacer cet hébergement ?'}, :class => "card-button admin-button admin-danger"  %>
      </div>
      <% end %>
    </div>
  </div>
</div>
