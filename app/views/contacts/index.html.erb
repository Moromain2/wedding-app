<div class="page-wrapper">

  <section id="contacts-page">
    <h1 class="section-header">Contacts utiles</h1>
    <p class="section-intro">Retrouvez toutes les personnes Ã  contacter pour toutes vos demandes</p>
    <% if @contacts.any? %>
    <div class="contact-cards-container">
      <% @contacts.each do |contact| %>
      <div class="contact-card">
        <% if contact.avatar.attached? %>
        <div class="avatar-container">
          <%= image_tag(contact.avatar) %>
        </div>
        <% end %>
        <h2 class="card-header"><%= contact.firstname %> <%= contact.lastname %></h2>
        <p class="contact-role"><%= contact.role %></p>
        <%= link_to "#{contact.phonenumber}", "tel:#{contact.phonenumber}", :class => 'card-button' %>
        <% if contact.email? %>
          <%= mail_to "#{contact.email}", "Envoyer un mail Ã  #{contact.firstname}", :class => 'card-button' %>
        <% end %>
        <% if admin_signed_in? %>
        <div class="show-admin-links">
          <%= link_to 'Modifier', edit_contact_path(contact), :class => 'card-button admin-button' %>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
    <% else %>
      <h4>Pas encore de contact pour le moment, Ã§a arrive vite ðŸ˜‰</h4>
    <% end %>
  </section>

</div>
