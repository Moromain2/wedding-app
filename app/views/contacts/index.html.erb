<h1>Tous les contacts</h1>

<% if @contacts.any? %>
  <ul>
  <% @contacts.each do |contact| %>
    <h2><%= contact.firstname %> <%= contact.lastname %></h2>
    <em><%= contact.role %></em>
    <ul>
      <li><%= link_to "#{contact.phonenumber}", "tel:#{contact.phonenumber}" %></li>
      <% if contact.email? %>
        <li><%= mail_to "#{contact.email}", "Envoyer un mail" %></li>
      <% end %>
    </ul>
  <% end %>
  </ul>
<% else %>
