<%= form_for @liste_de_mariage do |f| %>

  <%= f.label :title, 'Nom' %><br>
  <%= f.text_field :title %><br>
  <br>

  <%= f.label :link, 'Lien' %><br>
  <%= f.text_field :link %><br>
  <br>

  <%= f.label :description, 'Description' %><br>
  <%= f.text_area :description %><br>
  <br>

  <% if current_page?(action: 'new') %>
    <%= f.submit 'Ajouter' %>
  <% end %>
  <% if current_page?(action: 'edit') %>
    <%= f.submit 'Mettre à Jour' %>
    <%= link_to 'Effacer', @liste_de_mariage, method: :delete, data: {confirm: 'Veux tu vraiment effacer cet élément ?'} %>
  <% end %>

<% end %>
