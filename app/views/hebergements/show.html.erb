<div class="page-wrapper">

  <section id="accomodation-show-page">
    <h1 class="section-header"><%= @hebergement.title %></h1>
    <p class="section-intro"><%= @hebergement.description %></p>
    <div class="accomodation-contact-info">
      <h4>Adresse</h4>
      <ul>
        <li><%= @hebergement.adress %></li>
        <li><%= @hebergement.zipcode %> <%= @hebergement.city %></li>
      </ul>
      <%= link_to "#{@hebergement.phonenumber}", "tel:#{@hebergement.phonenumber}", :class => 'page-button button-dark' %>
      <% if @hebergement.email? %>
        <%= mail_to "#{@hebergement.email}", "Envoyer un email", :class => 'page-button button-dark' %>
      <% end %>
      <% if @hebergement.website? %>
        <%= link_to "Site Web", "#{@hebergement.website}", target: "_blank", :class => 'page-button button-dark' %>
      <% end %>
    </div>
    <%= link_to "Retour aux autres hÃ©bergements", hebergements_path, :class => 'page-button button-dark' %>

    <% if admin_signed_in? %>
    <div class="show-admin-links">
      <%= link_to 'Modifier', edit_hebergement_path(@hebergement), :class => 'card-button admin-button' %>
    </div>
    <% end %>

  </section>

</div>
